@model IEnumerable<Fuhrparkmanagement.Fahrzeug>

@{
    ViewBag.Title = "Aktueller Fuhrpark";
}

<h2>Index</h2>
<p> Diese Fahrzeuge stehen Ihnen aktuell zur Buchung zur Verfügung, sofern Sie Inhaber eines Führerscheins sind.</p>
@if (ViewBag.Admin == true)
{  <p>

        @Html.ActionLink("Fahrzeug hinzufügen", "Create")

    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kennzeichen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Farbe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kilometerstand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IstVomTyp.Modell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hauptnutzer)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Kennzeichen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Farbe)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Kilometerstand)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IstVomTyp.Modell)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hauptnutzer.Name)
    </td>
    @if (ViewBag.Admin == true)
    {   <td>
                   
            @Html.ActionLink("Bearbeiten", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
            
        </td>
    }
</tr>
    }

</table>
