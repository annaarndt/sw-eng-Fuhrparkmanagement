@model Fuhrparkmanagement.Fahrzeug

@{
    ViewBag.Title = "Fahrzeug löschen";
}
@if (ViewBag.Admin == true)
{
    <h2>Löschen</h2>

    <h3>Sind Sie sicher, dass Sie dieses Fahrzeug löschen möchten?</h3>
    <div>
        <h4>Fahrzeug</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Kennzeichen)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Kennzeichen)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Farbe)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Farbe)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Kilometerstand)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Kilometerstand)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IstVomTyp.Modell)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IstVomTyp.Modell)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Hauptnutzer)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Hauptnutzer)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Löschen" class="btn btn-default" /> |
                @Html.ActionLink("Zurück zur Übersicht", "Index")
            </div>
        }
    </div>
}
else
{ <h3>Sie sind nicht dazu befugt, Fahrzeuge zu löschen, da Sie keine Administratorenrechte besitzen.</h3>
    <td>@Html.ActionLink("Zurück zur Übersicht", "Index")</td>
}
